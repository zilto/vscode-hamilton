{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$esbuild-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never",
				"group": "watchers"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Build and install extension",
			"type": "shell",
			"command": "npm run compile && vsce package && code --install-extension hamilton-0.0.1.vsix",
			"group": "build"
		}
	]
}
