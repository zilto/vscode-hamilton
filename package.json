{
  "name": "hamilton",
  "displayName": "Hamilton",
  "description": "VSCode extension for the Hamilton Python framework",
  "publisher": "ThierryJean",
  "repository": "https://github.com/zilto/vscode-hamilton",
  "author": {
    "name": "Thierry Jean"
  },
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "hamilton",
    "dag",
    "pipeline"
  ],
  "icon": "resources/marketplace_icon.png",
  "activationEvents": [],
  "main": "./out/extension.js",
  "configuration": {
    "title": "Hamilton",
    "properties": {
      "hamilton.pythonPath": {
        "description": "Path to the desired Python interpreter, which has access to the Hamilton package.",
        "type": "string",
        "default": null
      }
    }
  },
  "contributes": {
    "commands": [
      {
        "category": "Hamilton",
        "command": "hamilton.buildDAG",
        "title": "Build DAG",
        "icon": "$(play)"
      },
      {
        "category": "Hamilton",
        "command": "hamilton.selectModules",
        "title": "Select Modules",
        "icon": "$(checklist)"
      },
      {
        "category": "Hamilton",
        "command": "hamilton.refreshModules",
        "title": "Refresh Modules",
        "icon": "$(extensions-refresh)"
      },
      {
        "category": "Hamilton",
        "command": "hamilton.registerModule",
        "title": "Register Module",
        "icon": "$(check)"
      },
      {
        "category": "Hamilton",
        "command": "hamilton.unregisterModule",
        "title": "Unregister Module",
        "icon": "$(chrome-close)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "hamilton_view",
          "title": "Hamilton",
          "icon": "$(circuit-board)"
        }
      ],
      "panel": []
    },
    "views": {
      "hamilton_view": [
        {
          "id": "hamilton.modules_treeview",
          "name": "Modules",
          "when": "true"
        },
        {
          "id": "hamilton.pythonFiles_treeview",
          "name": "Python files",
          "when": "true"
        },
        {
          "id": "hamilton.showHamiltonDag",
          "type": "webview",
          "name": "Hamilton: DAG"
        }
      ]
    },
    "panel": {},
    "menus": {
      "view/title": [
        {
          "command": "hamilton.buildDAG",
          "when": "view == hamilton.modules_treeview",
          "group": "navigation@1"
        },
        {
          "command": "hamilton.selectModules",
          "when": "view == hamilton.modules_treeview",
          "group": "navigation@2"
        },
        {
          "command": "hamilton.refreshModules",
          "when": "view == hamilton.modules_treeview",
          "group": "navigation@3"
        }
      ],
      "view/item/context": [
        {
          "command": "hamilton.registerModule",
          "when": "view == hamilton.pythonFiles_treeview && viewItem == pythonFile",
          "group": "inline"
        },
        {
          "command": "hamilton.unregisterModule",
          "when": "view == hamilton.modules_treeview && viewItem == pythonModule",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "install:all": "npm install && cd webview-ui && npm install",
    "start:webview": "cd webview-ui && npm run start",
    "build:webview": "cd webview-ui && npm run build",
    "compile": "node ./esbuild.js",
    "package": "NODE_ENV=production node ./esbuild.js",
    "watch": "node ./esbuild.js --watch",
    "vscode:prepublish": ""
  },
  "devDependencies": {
    "@hediet/std": "^0.6.0",
    "@types/chai": "4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.77.0",
    "@types/vscode-webview": "^1.57.1",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "@vscode/test-electron": "^2.2.3",
    "chai": "4.3.7",
    "esbuild": "^0.16.17",
    "eslint": "^8.34.0",
    "mocha": "^10.2.0",
    "sinon": "^15.0.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.5"
  },
  "extensionDependencies": [
    "ms-python.python"
  ],
  "dependencies": {
    "@microsoft/fast-react-wrapper": "^0.3.17",
    "@vscode/webview-ui-toolkit": "^1.2.2"
  }
}
